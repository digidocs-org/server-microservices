<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment</title>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
</head>

<body>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <form action="<%=callbackUrl%>" method="POST" id="callback_response">
        <input type="hidden" custom="Hidden Element" name="token" value="<%=token%>" />
    </form>
    <script>
        var options = {
            "key": "<%=process.env.RAZORPAY_KEY_ID%>",
            "amount": "<%=amount%>",
            "currency": "<%=currency%>",
            "name": "Digidocs Tech Pvt Ltd",
            "description": "Aadhaar E-Sign Payment",
            "image": "https://digidocs-prod-bucket.s3.ap-south-1.amazonaws.com/digidocs-logo.jpeg",
            "order_id": "<%=orderId%>",
            "handler": function (response) {
                $("<input type='hidden' />")
                    .attr("name", "response")
                    .attr("value", JSON.stringify(response))
                    .appendTo("#payment_callback");

                $("<input type='hidden' />")
                    .attr("name", "response")
                    .attr("value", JSON.stringify(response))
                    .appendTo("#callback_response");

                $.ajax({
                    url: '<%=paymentCallback%>',
                    type: 'POST',
                    data: JSON.stringify({
                        userId: '<%=userId%>',
                        response: JSON.stringify(response)
                    }),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        console.log(data)
                        document.getElementById("callback_response").submit()
                    }
                });
            },

            "modal": {
                "ondismiss": function () {
                    const response = {
                        error: "payment cancelled"
                    }
                    $("<input type='hidden' />")
                        .attr("name", "response")
                        .attr("value", JSON.stringify(response))
                        .appendTo("#payment_callback");

                    $("<input type='hidden' />")
                        .attr("name", "response")
                        .attr("value", JSON.stringify(response))
                        .appendTo("#callback_response");

                    $.ajax({
                        url: '<%=paymentCallback%>',
                        type: 'POST',
                        data: JSON.stringify({
                            userId: '<%=userId%>',
                            response: JSON.stringify(response)
                        }),
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            console.log(data)
                            document.getElementById("callback_response").submit()
                        }
                    });
                }
            },
            "prefill": {
                "name": "<%=name%>",
                "email": "<%=email%>",
                "contact": "<%=phoneNo%>"
            },
            "theme": {
                "color": "#1F7AE0"
            }
        };
        var rzp = new Razorpay(options);
        window.addEventListener("load", () => {
            rzp.open();
        })
    </script>
</body>

</html>