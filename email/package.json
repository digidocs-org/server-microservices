  "version": "1.0.0",
  "description": "Email microservice",
  "main": "index.js",
  "author": "digidocs",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.11.2",
    "gts": "^3.1.0",
    "nodemon": "^2.0.12",
    "tsconfig-paths": "^3.10.1"
  },
  "scripts": {
    "start": "nodemon"
  },
  "dependencies": {
    "@digidocs/guardian": "1.0.0",
    "node-nats-streaming": "^0.3.2",
    "nodemailer": "^6.6.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
